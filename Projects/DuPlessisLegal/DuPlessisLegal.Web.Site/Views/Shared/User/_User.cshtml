@using Microsoft.AspNetCore.Identity;
@using DuPlessisLegal.Web.Site.Areas.Identity.Data;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <form id="logoutform" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <form id="RegisterForm" class="form-inline" asp-area="Identity" asp-page="/Account/Register">
                <button id="Register" type="submit" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</button>
            </form>
        </li>
        <li class="nav-item">
            <form id="LoginForm" class="form-inline" asp-area="Identity" asp-page="/Account/Login">
                <button id="Login" type="submit" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</button>
            </form>
        </li>
    }
</ul>