
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <meta http-equiv="content-type" content="text/html" />
    <meta name="description" content="Living the Supernatural Life in a nutrual world as manifested sons of God" />
    <meta name="keywords" content="" />
    <meta name="author" content="IQ Tech Solutions" />

    <title>@ViewData["Title"] - Kingdom Lifestyle Ministries</title>

    <!-- Favicon and Touch Icons -->
    <link href="~/images/favicon.png" rel="shortcut icon" type="image/png">
    <link href="~/images/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="~/images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72">
    <link href="~/images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114">
    <link href="~/images/apple-touch-icon-144x144.png" rel="apple-touch-icon" sizes="144x144">

    <!-- Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/jquery-ui.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/animate.css" rel="stylesheet" type="text/css">
    <link href="~/css/css-plugin-collections.css" rel="stylesheet" />
    <link id="menuzord-menu-skins" href="~/css/menuzord-skins/menuzord-rounded-boxed.css" rel="stylesheet" />
    <link href="~/css/style-main.css" rel="stylesheet" type="text/css">
    <link href="~/css/preloader.css" rel="stylesheet" type="text/css">
    <link href="~/css/custom-bootstrap-margin-padding.css" rel="stylesheet" type="text/css">
    <link href="~/css/responsive.css" rel="stylesheet" type="text/css">
    <link href="~/css/colors/theme-skin-megenta.css" rel="stylesheet" type="text/css">

    <script src="~/js/jquery-2.2.4.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery-plugin-collection.js"></script>

    @RenderSection("Styles", required: false)
</head>
@{
    var classname = "";
    if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
    {
        classname = "has-side-panel side-panel-right fullwidth-page";
    }
}

<body class="@classname">

@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <div class="body-overlay"></div>
    <div id="side-panel" class="dark bg-img-cover layer-overlay overlay-white-8">
        <div class="side-panel-wrap">
            <div id="side-panel-trigger-close" class="side-panel-trigger">
                <a href="#"><i class="pe-7s-close font-36"></i></a>
            </div>
            <a href="javascript:void(0)"><img src="~/images/logo-wide.png" alt=""></a>
            <div class="side-panel-nav mt-30">
                <div class="widget no-border">
                    <partial name="Menus/_AdminMenu"/>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="side-panel-widget mt-30">
                <div class="widget no-border">
                    <ul>
                        <li class="font-14 mb-5"> <i class="fa fa-phone text-theme-colored"></i> <a href="#" class="text-gray">@FrameworkDI.Configuration["Company:Tel"]</a> </li>
                        <li class="font-14 mb-5"> <i class="fa fa-envelope-o text-theme-colored"></i> <a href="mailto:@FrameworkDI.Configuration["EmailSettings:InfoAddress"]" class="text-gray">@FrameworkDI.Configuration["EmailSettings:InfoAddress"]</a> </li>
                    </ul>
                </div>
                <div class="widget">
                    <ul class="styled-icons icon-dark icon-theme-colored icon-sm">
                        <li><a href="@FrameworkDI.Configuration["Google:Url"]"><i class="fa fa-google-plus"></i></a></li>
                        <li><a href="@FrameworkDI.Configuration["Facebook:Url"]"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="@FrameworkDI.Configuration["Twitter:Url"]"><i class="fa fa-twitter"></i></a></li>
                    </ul>
                </div>
                <p>Created by <a href="http://www.iqtechsolutions.co.za" target="_blank">IQ Tech Solutions</a> <br/> Powered by ASP.NET <br/> &copy; Copyright @DateTime.Now.Year</p>
            </div>
        </div>
    </div>
}
<div id="wrapper" class="clearfix">
    <!-- preloader -->
    <div id="preloader">
        <div id="spinner" class="spinner large-icon">
            <img alt="" src="~/images/preloaders/12.gif">
        </div>
        <div id="disable-preloader" class="btn btn-default btn-sm">Disable Preloader</div>
    </div>

    @RenderBody()

    <a class="scrollToTop" href="#"><i class="fa fa-angle-up"></i></a>
</div>
    
<div class="modal modal-message fade" id="CropModal" data-backdrop="static" data-keyboard="false"></div>
<div class="modal modal-message fade" id="ModalPlaceHolder"></div>

<!-- Footer Scripts -->
<!-- JS | Custom script for all pages -->
<script src="~/js/custom.js"></script>
<script src="~/js/addtocart.js"></script>

@RenderSection("Scripts", required: false)

</body>
</html>
