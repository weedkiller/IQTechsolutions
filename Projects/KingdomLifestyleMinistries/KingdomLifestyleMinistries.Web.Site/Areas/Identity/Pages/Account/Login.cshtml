@page
@using IQTechFramework.Framework
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="inner-header divider parallax layer-overlay overlay-dark-7" data-bg-img="/images/content/KnightBreadcrum.jpg">
    <div class="container pt-90 pb-50">
        <!-- Section Content -->
        <div class="section-content pt-100">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="title text-white">@ViewData["Title"]</h3>
                    <ul class="list-inline text-white">
                        <li class="text-white"><a asp-area="" asp-controller="Home" asp-action="Index">Home </a> / </li>
                        <li class="text-white">@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-push-3">
                <h4 class="text-gray mt-0 pt-5"> Login</h4>
                <hr>
                <p>Login to your free @FrameworkDI.Configuration["Company:Name"].</p>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="form_username_email">Username</label>
                            <input asp-for="Input.Username" class="form-control" type="text">
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="form_password">Password</label>
                            <input asp-for="Input.Password" class="form-control" type="password">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="checkbox pull-left mt-15">
                        <label for="form_checkbox">
                            <input asp-for="Input.RememberMe" type="checkbox">
                            Remember me
                        </label>
                    </div>
                    <div class="form-group pull-right mt-10">
                        <button type="submit" class="btn btn-dark btn-sm">Login</button>
                    </div>
                    <div class="clear text-center pt-10">
                        <a class="text-theme-colored font-weight-600 font-12" asp-page="./ForgotPassword">Forgot Your Password?</a>
                    </div>
                    <div class="clear text-center pt-10">
                        <a class="text-theme-colored font-weight-600 font-12" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register for New Acccount</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
