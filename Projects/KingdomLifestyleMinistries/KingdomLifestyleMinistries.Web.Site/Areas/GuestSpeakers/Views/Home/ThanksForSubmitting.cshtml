@{
    ViewData["Title"] = "Thanks For Submitting";
    Layout = "_Layout";
}

<div class="cp-page-content">
    <div class="container">
        <div class="row" style="padding-bottom: 50px; padding-top: 50px;">
            <div class="col-lg-12 text-center">

                @if (ViewBag.Message != null)
                {
                    if (ViewBag.Description != null)
                    {
                        <h3>Thank You for Submitting your request</h3>
                        <hr />
                        <h4>@ViewBag.Message</h4>
                    }
                    else
                    {
                        <h3>Thank You for Submitting your request</h3>
                        <hr />
                        <h4>@ViewBag.Message</h4>
                    }
                }
                else
                {
                    <h3>Thank You for Subscribing to our newsletter</h3>
                    <h4>All the newest prices, products and product lists will be sent to you as soon as it becomes available</h4>
                }
                <div class="text-center" style="padding-top: 50px">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-danger">Back to Home Page</a>
                </div>
            </div>
        </div>
    </div>
</div>
<h2>ThanksForSubmitting</h2>

