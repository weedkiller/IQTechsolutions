@model ICollection<Messaging.Base.Entities.Message>

<h4 class="title">New Messages <small>@Model.Count new messages</small></h4>
<!-- begin scrollbar -->
<div data-scrollbar="true" data-height="280px" class="bg-silver">
    <!-- begin chats -->
    <ul class="chats">
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <li class="left">
                    <a asp-area="Chats" asp-controller="Home" asp-action="Chat" asp-route-id="@item.Id">
                        <span class="date-time">@item.CreatedDateString</span>
                        <div class="name">@item.Sender.FirstName @item.Sender.LastName</div>
                        <div class="image">
                            <img alt="@item.Sender.FirstName @item.Sender.LastName Profile Image"  src="">
                        </div>
                        <div class="message">
                            @item.MessageString
                        </div>
                    </a>

                </li>
            }
        }
        else
        {
            <li class="active">
                <div class="todolist-title">No new messages</div>
            </li>
        }
    </ul>
    <!-- end chats -->
</div>
<!-- end scrollbar -->