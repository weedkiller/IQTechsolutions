@model EmployeeAddEditModel

@{
    ViewData["Title"] = $"Edit {Model.Entity.Names.GetFullNames()}";
}

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-md-4">
            <label asp-for="CoverUpload" class="control-label"></label>
            <img id="preview" style="width: 100%" src="@Model.Entity.GetImage(ImageType.Profile).GetPath()" alt="" />
            <input asp-for="CoverUpload" class="form-control" onchange="loadFile(event)" />
            <span asp-validation-for="CoverUpload" class="text-danger"></span>
        </div>
        <div class="col-md-8">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Entity.Names.FirstName" class="control-label"></label>
                <input asp-for="Entity.Names.FirstName" class="form-control" />
                <span asp-validation-for="Entity.Names.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entity.Names.LastName" class="control-label"></label>
                <input asp-for="Entity.Names.LastName" class="form-control" />
                <span asp-validation-for="Entity.Names.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entity.Bio" class="control-label"></label>
                <textarea asp-for="Entity.Bio" class="form-control"></textarea>
                <span asp-validation-for="Entity.Bio" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Entity.Featured" /> Featured
                </label>
            </div>
            <input type="hidden" asp-for="Entity.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Cancel</a>
            </div>

        </div>
    </div>
</form>
