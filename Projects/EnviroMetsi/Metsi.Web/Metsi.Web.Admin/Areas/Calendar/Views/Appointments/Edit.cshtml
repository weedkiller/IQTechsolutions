@model AddEditModelBase<Calendar.Base.Entities.Appointment>

@{
    ViewData["Title"] = "Edit Appointment";
}

@{
    <link href="/plugins/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
    <link href="/plugins/bootstrap-datepicker/css/datepicker3.css" rel="stylesheet" />
    <link href="/plugins/ionRangeSlider/css/ion.rangeSlider.css" rel="stylesheet" />
    <link href="/plugins/ionRangeSlider/css/ion.rangeSlider.skinNice.css" rel="stylesheet" />
    <link href="/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css" rel="stylesheet" />
    <link href="/plugins/bootstrap-timepicker/css/bootstrap-timepicker.min.css" rel="stylesheet" />
    <link href="/plugins/password-indicator/css/password-indicator.css" rel="stylesheet" />
    <link href="/plugins/bootstrap-combobox/css/bootstrap-combobox.css" rel="stylesheet" />
    <link href="/plugins/bootstrap-select/bootstrap-select.min.css" rel="stylesheet" />
    <link href="/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css" rel="stylesheet" />
    <link href="/plugins/jquery-tag-it/css/jquery.tagit.css" rel="stylesheet" />
    <link href="/plugins/bootstrap-daterangepicker/daterangepicker-bs3.css" rel="stylesheet" />
    <link href="/plugins/select2/dist/css/select2.min.css" rel="stylesheet" />
}

<form asp-area="Calendar" asp-controller="Appointments" asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Entity.Id" />

    <div class="panel panel-inverse">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-repeat"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
                <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
            </div>
            <h4 class="panel-title">Create Route</h4>
        </div>
        <div id="mainPanel" class="panel-body p-0">
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group" style="padding: 10px;">
                        <label asp-for="Entity.Heading" class="control-label"></label>
                        <input asp-for="Entity.Heading" class="form-control" />
                        <span asp-validation-for="Entity.Heading" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom: 10px; padding-left: 10px; padding-right: 10px;">
                        <label asp-for="Entity.Description" class="control-label"></label>
                        <textarea asp-for="Entity.Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Entity.Description" class="text-danger"></span>
                    </div>
                    <div class="row" style="padding-bottom: 10px; padding-left: 10px; padding-right: 10px;">
                        <div class="form-group">
                            <label class="col-md-2 control-label">Start Date</label>
                            <div class="col-md-4">
                                <div class="input-group date" id="datepicker-autoClose" data-date-format="dd-mm-yyyy">
                                    <input type="text" asp-for="Entity.StartDate" class="form-control" placeholder="Select Date" />
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                            <label class="control-label col-md-2">Start Time</label>
                            <div class="col-md-4">
                                <div class="input-group bootstrap-timepicker">
                                    <input asp-for="Entity.StartTime" type="text" class="form-control" />
                                    <span class="input-group-addon"><i class="fa fa-clock-o"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-bottom: 10px; padding-left: 10px; padding-right: 10px;">
                        <div class="form-group">
                            <label class="col-md-2 control-label">Start Date</label>
                            <div class="col-md-4">
                                <div class="input-group date" id="datepicker-autoClose" data-date-format="dd-mm-yyyy">
                                    <input type="text" asp-for="Entity.EndDate" class="form-control" placeholder="Select Date" />
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                            <label class="control-label col-md-2">Start Time</label>
                            <div class="col-md-4">
                                <div class="input-group bootstrap-timepicker">
                                    <input asp-for="Entity.EndTime" type="text" class="form-control" />
                                    <span class="input-group-addon"><i class="fa fa-clock-o"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-bottom: 10px; padding-left: 10px; padding-right: 10px;">
                        @*@if (!string.IsNullOrEmpty(Model.Entity.RouteId))
                        {
                            <h4> This appointment has a route</h4>
                        }
                        @if (!string.IsNullOrEmpty(Model.Entity.TaskId))
                        {
                            <h4> This appointment has a task</h4>
                        }*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group text-right">
                <input name="main" type="submit" value="Save" class="btn btn-primary" />
                <input name="finnish" type="submit" value="Publish" class="btn btn-primary" />
                <a asp-area="Blog" asp-controller="Home" asp-action="List" class="btn btn-danger">Cancel</a>
            </div>
        </div>
    </div>

</form>

@section Scripts{
    <script src="/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="/plugins/ionRangeSlider/js/ion-rangeSlider/ion.rangeSlider.min.js"></script>
    <script src="/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <script src="/plugins/masked-input/masked-input.min.js"></script>
    <script src="/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js"></script>
    <script src="/plugins/password-indicator/js/password-indicator.js"></script>
    <script src="/plugins/bootstrap-combobox/js/bootstrap-combobox.js"></script>
    <script src="/plugins/bootstrap-select/bootstrap-select.min.js"></script>
    <script src="/plugins/bootstrap-tagsinput/bootstrap-tagsinput.min.js"></script>
    <script src="/plugins/bootstrap-tagsinput/bootstrap-tagsinput-typeahead.js"></script>
    <script src="/plugins/jquery-tag-it/js/tag-it.min.js"></script>
    <script src="/plugins/bootstrap-daterangepicker/moment.js"></script>
    <script src="/plugins/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="/plugins/select2/dist/js/select2.min.js"></script>
    <script src="/js/form-plugins.demo.min.js"></script>
    <script src="/js/apps.min.js"></script>

    <script>

        $("#Entity_StartTime").timepicker();
        $("#Entity_EndTime").timepicker();

        $(document).ready(function () {
            App.init();
            FormPlugins.init();
        });
    </script>
}