@model Metsi.Web.Admin.Areas.Calendar.Models.RecurringTaskAddEditModel


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Create Work Item</h4>
        </div>
        <div class="modal-body" id="addContactNumberModelBodyDiv">
            <form asp-area="Calendar" asp-controller="Work" asp-action="CreateWorkItem" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Entity.Id" />
                <input type="hidden" asp-for="RouteLocationId" />
                <input type="hidden" asp-for="Entity.ParentTaskId" />
                <div>
                    <div class="row">
                        <div class="form-group">
                            <label asp-for="Entity.Name" class="control-label"></label>
                            <input asp-for="Entity.Name" class="form-control" />
                            <span asp-validation-for="Entity.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Entity.Description" class="control-label"></label>
                            <textarea asp-for="Entity.Description" class="form-control" style="height: 100px;"></textarea>
                            <span asp-validation-for="Entity.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!-- ================== FORM BUTTON ================== -->
                <div class="row" style="padding-bottom: 50px">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 text-right">
                            <button type="submit" class="btn btn-sm btn-primary">Save Changes</button>
                            <a href="javascript:;" class="btn btn-sm btn-danger" data-dismiss="modal">Close</a>
                        </div>
                    </div>
                </div>
                <!-- ================== END FORM BUTTON ================== -->

            </form>
            <div style="text-align: center; display: none" id="EmailAddressAddEditloaderDiv">
                <img src="~/images/loader2.gif" />
            </div>
        </div>
    </div>
</div>