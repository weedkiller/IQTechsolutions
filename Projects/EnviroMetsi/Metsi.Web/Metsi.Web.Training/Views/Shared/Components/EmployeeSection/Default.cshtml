@using Iqt.Base.Interfaces
@model IEnumerable<Employment.Base.ApiModels.EmployeeModel>
@inject IApplicationConfiguration Configuration

<section id="team" class="team">
    <div class="container">
        <div class="row m-b-lg">
            <div class="col-lg-12 text-center">
                <div class="navy-line"></div>
                <h1>Our Team</h1>
                <p>Meet our passionate industry experts.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-4 wow fadeInLeft">
                    <div class="team-member">
                        <img src="@item.ImageUrl" class="img-responsive img-circle img-small" alt="@item.FirstName @item.LastName Profile Image">
                        <h4><span class="navy">@item.FirstName</span> @item.LastName</h4>
                        <p>@item.Description </p>
                        <ul class="list-inline social-icon">

                            @if (!string.IsNullOrEmpty(item.TwitterUrl) && item.TwitterUrl != "#")
                            {
                                <li>
                                    <a href="@item.TwitterUrl"><i class="fa fa-twitter"></i></a>
                                </li>
                            }
                            @if (!string.IsNullOrEmpty(item.FacebookUrl) && item.FacebookUrl != "#")
                            {
                                <li>
                                    <a href="@item.FacebookUrl"><i class="fa fa-facebook"></i></a>
                                </li>
                            }
                            @if (!string.IsNullOrEmpty(item.LinkedInUrl) && item.LinkedInUrl != "#")
                            {
                                <li>
                                    <a href="@item.LinkedInUrl"><i class="fa fa-linkedin"></i></a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</section>