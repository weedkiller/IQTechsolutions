@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<form class="login100-form validate-form" method="post" asp-controller="Authentication" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="All" class="text-danger"></div>
    <span class="login100-form-title p-b-37">
        <img src="~/images/logo/logoInEllipse.png" style="width: 70%; max-width: 250px" title="Feaw Things" alt="Feaw Things">
        <br />
        Sign In
    </span>

    <div class="wrap-input100 validate-input m-b-20" data-validate="Enter username or email">
        <input class="input100" type="text" asp-for="Username" placeholder="username or email">
        <span class="focus-input100"></span>
    </div>

    <div class="wrap-input100 validate-input m-b-25" data-validate="Enter password">
        <input class="input100" type="password" asp-for="Password" placeholder="password">
        <span class="focus-input100"></span>
    </div>

    <div class="wrap-input100 validate-input m-b-25" data-validate="Enter password">
        <div class="checkbox">
            <label asp-for="RememberMe">
                <input asp-for="RememberMe" />
                Remember Me
            </label>
        </div>
    </div>

    <div class="container-login100-form-btn">
        <button class="login100-form-btn">
            Sign In
        </button>
    </div>

    <div class="text-center p-t-57 p-b-20">
        <span class="txt1">
            Or login with
        </span>
    </div>

    <div class="flex-c p-b-112">
        <a href="#" class="login100-social-item">
            <i class="fa fa-facebook-f"></i>
        </a>

        <a href="#" class="login100-social-item">
            <img src="/images/icons/icon-google.png" alt="GOOGLE">
        </a>
    </div>

    <div class="text-center">
        <a asp-controller="Authentication" asp-action="Register" class="txt2 hov1">
            Register a New Account
        </a>
    </div>

    <div class="text-center">
        <a href="#" class="txt2 hov1">
            Forgot Password
        </a>
    </div>

</form>
