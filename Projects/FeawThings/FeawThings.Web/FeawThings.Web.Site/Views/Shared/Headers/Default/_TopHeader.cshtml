@using Iqt.Base.Interfaces
@inject IApplicationConfiguration Configuration

    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="header-top-left form-inline col-sm-6 col-xs-12 compact-hidden">
                    <div class="form-group languages-block ">
                        <form asp-area="" asp-controller="Home" asp-action="Index" method="post" enctype="multipart/form-data" id="bt-language">
                            <a class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
                                <img src="~/image/demo/flags/gb.png" alt="English" title="English">
                                <span class="">English</span>
                                <span class="fa fa-angle-down"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a asp-area="" asp-controller="Home" asp-action="Index"><img class="image_flag" src="~/images/content/flags/gb.png" alt="English" title="English" /> English </a></li>
                            </ul>
                        </form>
                    </div>

                    <div class="form-group currencies-block">
                        <form asp-area="" asp-controller="Home" asp-action="Index" method="post" enctype="multipart/form-data" id="currency">
                            <a class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
                                <span class="icon icon-credit "></span> SA Rands <span class="fa fa-angle-down"></span>
                            </a>
                            <ul class="dropdown-menu btn-xs">
                                <li> <a asp-area="" asp-controller="Home" asp-action="Index">(R)&nbsp;SA Rands</a></li>
                            </ul>
                        </form>
                    </div>
                    @if (User.IsInRole("Seller") || User.IsInRole("Admin"))
                    {
                        <div class="form-group currencies-block">
                            <a class="btn btn-xs dropdown-toggle" asp-area="Dashboard" asp-controller="Home" asp-action="Index">
                                <span class="icon icon-download"></span> Seller Panel
                            </a>
                        </div>
                    }
                </div>
                <div class="header-top-right collapsed-block text-right  col-sm-6 col-xs-12 compact-hidden">
                    <h5 class="tabBlockTitle visible-xs">More<a class="expander " href="#TabBlock-1"><i class="fa fa-angle-down"></i></a></h5>
                    <div class="tabBlock" id="TabBlock-1">
                        <ul class="top-link list-inline">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="account" id="my_account">
                                    <a href="#" title="My Account" class="btn btn-xs dropdown-toggle" data-toggle="dropdown"> <span>My Account</span> <span class="fa fa-angle-down"></span></a>
                                    <ul class="dropdown-menu ">
                                        <li><a href="@Configuration.GetRegistrationReturnUrl(Context.Request.Path)"><i class="fa fa-user"></i> Register</a></li>
                                        <li><a href="@Configuration.GetLoginReturnUrl(Context.Request.Path)"><i class="fa fa-pencil-square-o"></i> Login</a></li>
                                    </ul>
                                </li>

                            }
                            else
                            {
                                <li class="account" id="my_account">
                                    <a asp-area="" asp-controller="Home" asp-action="Logout" title="Sign Out" class="btn btn-xs dropdown-toggle"> <span>Sign Out</span></a>
                                </li>
                                <li class="wishlist"><a asp-area="Shop" asp-controller="Wishlist" asp-action="Index" id="wishlist-total" class="top-link-wishlist" title="Wish List"><span>Wish List</span></a></li>
                            }
                            <li class="checkout"><a asp-area="Shop" asp-controller="ShoppingCart" asp-action="Checkout" class="top-link-checkout" title="Checkout"><span>Checkout</span></a></li>
                            <li class="login"><a asp-area="Shop" asp-controller="ShoppingCart" asp-action="Index" title="Shopping Cart"><span>Shopping Cart</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>