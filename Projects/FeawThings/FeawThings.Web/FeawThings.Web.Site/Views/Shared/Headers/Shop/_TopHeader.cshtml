<div class="header-top compact-hidden">
    <div class="container">
        <div class="row">
            <div class="header-top-left form-inline col-sm-5 col-xs-12 compact-hidden">
                <div class="form-group languages-block ">
                    <form asp-area="" asp-controller="Home" asp-action="Index" method="post" enctype="multipart/form-data" id="bt-language">
                        <a class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
                            <img src="~/images/content/flags/gb.png" alt="English" title="English">
                            <span class="">English</span>
                            <span class="fa fa-angle-down"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a asp-area="" asp-controller="Home" asp-action="Index"><img class="image_flag" src="~/images/content/flags/gb.png" alt="English" title="English" /> English </a></li>
                        </ul>
                    </form>
                </div>

                <div class="form-group currencies-block">
                    <form method="post" enctype="multipart/form-data" id="currency">
                        <a class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
                            <span class="icon icon-credit "></span> SA Rands <span class="fa fa-angle-down"></span>
                        </a>
                        <ul class="dropdown-menu btn-xs">
                            <li> <a asp-area="" asp-controller="Home" asp-action="Index">(R)&nbsp;SA Rands</a></li>
                        </ul>
                    </form>
                </div>
            </div>
            <div class="header-top-right collapsed-block text-right  col-sm-7 col-xs-12 compact-hidden">
                <h5 class="tabBlockTitle visible-xs">More<a class="expander " href="#TabBlock-1"><i class="fa fa-angle-down"></i></a></h5>
                <div class="tabBlock" id="TabBlock-1">
                    <ul class="top-link list-inline">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="account" id="my_account"><a asp-area="" asp-controller="Home" asp-action="CommingSoon" title="My Account" class="btn btn-xs dropdown-toggle"> <i class="fa fa-user"></i> My Account </a></li>
                            <li class="wishlist"><a asp-area="Shop" asp-controller="Wishlist" asp-action="Index" class="top-link-wishlist" title="wishlist"><i class="fa fa-heart"></i> My Wish List</a></li>
                            <li class="checkout"><a asp-area="Shop" asp-controller="ShoppingCart" asp-action="Checkout" class="top-link-checkout" title="Checkout"><i class="fa fa-check-square-o"></i> Checkout</a></li>
                            <li class="signin"><a asp-area="" asp-controller="Home" asp-action="Logout" class="top-link-checkout" title="Sign Out"><i class="fa fa-lock"></i> Sign Out</a></li>
                        }
                        else
                        {
                            <li class="wishlist"><a asp-area="Shop" asp-controller="Wishlist" asp-action="Index" class="top-link-wishlist" title="wishlist"><i class="fa fa-heart"></i> My Wish List</a></li>
                            <li class="checkout"><a asp-area="Shop" asp-controller="ShoppingCart" asp-action="Checkout" class="top-link-checkout" title="Checkout"><i class="fa fa-check-square-o"></i> Checkout</a></li>
                            <li class="signin"><a asp-area="" asp-controller="Home" asp-action="Dashboard" class="top-link-checkout" title="login"><i class="fa fa-lock"></i> Sign In</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>