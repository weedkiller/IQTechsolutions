<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="IQ Tech Solutions - www.iqtechsolutions.co.za">
    <meta name="keywords" content="@ViewData["Keywords"]">
    <meta name="description" content="@ViewData["Description"]">

    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Montserrat:400,500,600,700", "Noto+Sans:400,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>

    <link rel="apple-touch-icon" sizes="180x180" href="~/images/logos/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/logos/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/logos/favicon-16x16.png">
    <link rel="stylesheet" href="~/vendors/css/base/bootstrap.min.css">
    <link rel="stylesheet" href="~/vendors/css/base/elisyam-1.5.min.css">
    <link href="~/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

    @RenderSection("Styles", required: false)

</head>

<body id="page-top">

    <div id="preloader">
        <div class="canvas">
            <img src="/images/logos/iqtechsolutions-logo.png" alt="IQ Tech Solutions Small Logo" class="loader-logo">
            <div class="spinner"></div>
        </div>
    </div>

    @RenderBody()

    <script src="~/vendors/js/base/jquery.min.js"></script>
    <script src="~/vendors/js/base/core.min.js"></script>
    <script src="~/vendors/js/nicescroll/nicescroll.min.js"></script>
    <script src="~/vendors/js/app/app.min.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
