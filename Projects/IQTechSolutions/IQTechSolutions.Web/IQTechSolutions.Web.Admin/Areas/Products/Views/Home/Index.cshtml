@model ProductIndexModel

@{
    ViewData["Title"] = "Shop";
    Layout = "Layouts/_Layout";
}


<!--content-->
<section class="section_offset">
    <div class="container">
        <!--categories-->


        <div class="m_bottom_50 m_xs_bottom_15">
            @if (Model.All.Any())
            {
                <div class="relative">
                    <div class="row">
                        <div class="owl-carousel" data-plugin-options='{"singleItem":false,"itemsCustom":[[1210,5],[992,4],[768,3],[450,2],[10,1]]}' data-nav="ln_nav_">
                            @foreach (var category in Model.Categories)
                            {
                                <figure class="col-lg-12 col-md-12 col-sm-12" data-appear-animation="fadeInUp">
                                    <a asp-area="Products" asp-controller="Categories" asp-action="Details" asp-route-id="@category.Id" class="r_corners category_link w_xs_auto d_xs_inline_b f_xs_none m_xs_bottom_15 d_block f_left wrapper m_right_10 t_align_c">
                                        <img src="@category.GetImage()" alt="@category.Name">
                                        <p class="category_title bg_light_2 tr_all color_dark">@category.Name</p>
                                    </a>
                                </figure>
                            }
                        </div>
                    </div>

                    <!--carousel nav-->
                    <button class="icon_wrap_size_4 circle color_grey_light tr_all color_blue_hover ln_nav_prev d_md_none" data-appear-animation="fadeIn">
                        <i class="icon-left-open-big"></i>
                    </button>
                    <button class="icon_wrap_size_4 circle color_grey_light tr_all color_blue_hover ln_nav_next d_md_none" data-appear-animation="fadeIn">
                        <i class="icon-right-open-big"></i>
                    </button>
                </div>
            }
            else
            {
                <h3 class="color_dark fw_light m_bottom_15" data-appear-animation="bounceInLeft">Our Shop</h3>
                <p class="m_bottom_35" data-appear-animation="bounceInLeft" data-appear-animation-delay="150">We are currently setting up the inventory for category and will have some great specials available shortly!</p>
                <hr />
                <figure class="portfolio_item type_2 three_dimensional" style="width: 100% !important">
                    <h3>Unfortunately there are no products available for this category, please try again later!</h3>
                </figure>
            }

        </div>
        @if (Model.FeaturedProducts.Any())
        {
            <h3 class="fw_light color_dark m_bottom_35 t_align_c" data-appear-animation="bounceInLeft">Featured products</h3>
            <div class="relative m_bottom_70 m_xs_bottom_30">

                <div class="row">
                    <div class="owl-carousel t_xs_align_c featured_products" data-nav="fproducts_nav_" data-plugin-options='{"singleItem":false,"itemsCustom":[[992,4],[768,3],[600,2],[10,1]]}'>
                        @foreach (var prod in Model.FeaturedProducts)
                        {
                            
                        }
                    </div>
                </div>
                <!--carousel nav-->
                <button class="icon_wrap_size_4 circle color_grey_light tr_all color_blue_hover fproducts_nav_prev d_md_none" data-appear-animation="fadeIn">
                    <i class="icon-left-open-big"></i>
                </button>
                <button class="icon_wrap_size_4 circle color_grey_light tr_all color_blue_hover fproducts_nav_next d_md_none" data-appear-animation="fadeIn">
                    <i class="icon-right-open-big"></i>
                </button>
            </div>
        }
        <!--banners-->
        <section class="row t_xs_align_c" style="padding-bottom: 0 !important;">
            <div class="col-lg-4 col-md-4 col-sm-4 m_bottom_12 m_xs_bottom_30" data-appear-animation="fadeInUp">
                <a asp-area="Products" asp-controller="Home" asp-action="Index" class="d_block d_xs_inline_b d_mxs_block"><img src="~/images/content/banner_1.png" alt=""></a>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 m_bottom_12 m_xs_bottom_30" data-appear-animation="fadeInUp" data-appear-animation-delay="200">
                <a asp-area="Products" asp-controller="Home" asp-action="Create" class="d_block d_xs_inline_b d_mxs_block"><img src="~/images/content/banner_2.png" alt=""></a>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 m_bottom_12 m_xs_bottom_0" data-appear-animation="fadeInUp" data-appear-animation-delay="400">
                <a asp-area="Products" asp-controller="Home" asp-action="Index" class="d_block d_xs_inline_b d_mxs_block"><img src="~/images/content/banner_3.png" alt=""></a>
            </div>
        </section>
    </div>
</section>


@if (Model.FeaturedBrands.Count() > 0)
{
    <section class="section_offset relative wrapper">
        <div class="video_wrap">
            <video autoplay muted loop>
                <source src="~/video/1.mp4" type="video/mp4">
                <source src="~/video/1.webm" type="video/webm">
            </video>
        </div>
        <div class="container">
            <h3 class="color_grey fw_light t_align_c m_bottom_12" data-appear-animation="bounceInLeft">Our Brands</h3>
            <p class="m_bottom_40 color_grey t_align_c" data-appear-animation="bounceInLeft" data-appear-animation-delay="150">Brands you can rely on to get the job done!</p>
            <div class="relative" data-appear-animation="fadeInUp" data-appear-animation-delay="800">
                <div class="t_xs_align_c">
                    <div class="owl-carousel clients brands with_video t_align_c" data-plugin-options='{"pagination":true,"transitionStyle" : "backSlide"}' data-nav="c_nav_">
                        <!--item-->
                        <div>
                            <div class="row">
                                @foreach (var item in Model.FeaturedBrands.Take(6))
                                {

                                }
                            </div>
                        </div>
                        <!--item-->
                        <div>
                            <div class="row">
                                @foreach (var item in Model.FeaturedBrands.Skip(6).Take(6))
                                {

                                }
                            </div>
                        </div>
                        <!--item-->
                        <div>
                            <div class="row">
                                @foreach (var item in Model.FeaturedBrands.Skip(12).Take(6))
                                {

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--carousel nav-->
            <button class="icon_wrap_size_5 circle color_grey tr_all color_blue_hover c_nav_prev nav_type_3 d_md_none">
                <i class="icon-left-open-big"></i>
            </button>
            <button class="icon_wrap_size_5 circle color_grey tr_all color_blue_hover c_nav_next nav_type_3 d_md_none">
                <i class="icon-right-open-big"></i>
            </button>
        </div>
    </section>
}

@section Scripts {
    <script src="~/plugins/jquery.iosslider.min.js"></script>
    <script src="~/plugins/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/plugins/jquery.iosslider.min.js"></script>

    <script src="~/js/summernote/summernote.js"></script>

    <script type="text/javascript">
        // Default
        $(document).ready(function() {
            var HomeIndex = function() {

                var $this = this;

                function initialize() {
                    $('#markdown').prop('disabled', true);
                    $('#markdown').summernote({
                        disable: true,
                        height: null,
                        toolbar: false
                    });
                }

                $this.init = function() {
                    initialize();
                }
            };
            var self = new HomeIndex();
            self.init();
        });


    </script>
}

