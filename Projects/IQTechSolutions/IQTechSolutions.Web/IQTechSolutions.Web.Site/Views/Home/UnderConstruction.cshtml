@inject IApplicationConfiguration Configuration;

@{
    ViewBag.Title = "Coming Soon";
    ViewBag.Author = "https://plus.google.com/b/104248641649842950883/";
    ViewBag.Description = $"This is the construction page for {Configuration.CompanyName}.";
}

    <!--coming soon-->
    <section class="coming_soon color_light t_align_c">
        <div class="container">
            <h1 class="fw_light m_bottom_10">Currently we are under construction</h1>
            <p class="m_bottom_35 color_grey_light_3">We will be back in:</p>
            <div id="countdown"></div>
        </div>
    </section>
    <!--content-->
    <div class="section_offset">
        <div class="container clearfix">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 m_xs_bottom_30">
                    <h5 class="color_dark m_bottom_23 fw_light">Notify Me</h5>
                    <form class="notify_me subscribe_send_form">
                        <div class="clearfix">
                            <input type="email" class="fw_light f_left f_xs_none r_corners d_inline_m d_xs_block m_xs_bottom_10" placeholder="Enter your email address to be notified first" name="subscribe_email">
                            <button class="button_type_6 f_right f_xs_none color_purple transparent r_corners fs_medium tr_all d_inline_m">Subscribe</button>
                        </div>
                    </form>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <h5 class="color_dark m_bottom_20 fw_light">Stay Connected</h5>
                    <ul class="hr_list social_icons">
                        <!--tooltip_container class is required-->
                        <li class="m_right_15 m_bottom_15 tooltip_container">
                            <!--tooltip-->
                            <span class="d_block r_corners color_default tooltip fs_small tr_all">Follow Us on Facebook</span>
                            <a href="@Configuration.FacebookUrl" class="d_block facebook icon_wrap_size_2 circle color_grey_light_2">
                                <i class="icon-facebook fs_small"></i>
                            </a>
                        </li>
                        <li class="m_right_15 m_bottom_15 tooltip_container">
                            <!--tooltip-->
                            <span class="d_block r_corners color_default tooltip fs_small tr_all">Follow Us on Twitter</span>
                            <a href="@Configuration.TwitterUrl" class="d_block twitter icon_wrap_size_2 circle color_grey_light_2">
                                <i class="icon-twitter fs_small"></i>
                            </a>
                        </li>
                        <li class="m_right_15 m_bottom_15 tooltip_container m_xs_right_15">
                            <!--tooltip-->
                            <span class="d_block r_corners color_default tooltip fs_small tr_all">LinkedIn</span>
                            <a href="@Configuration.LinkedInUrl" class="d_block linkedin icon_wrap_size_2 circle color_grey_light_2">
                                <i class="icon-gplus-1 fs_small"></i>
                            </a>
                        </li>
                        <li class="m_right_15 m_bottom_15 tooltip_container">
                            <!--tooltip-->
                            <span class="d_block r_corners color_default tooltip fs_small tr_all">Pinterest</span>
                            <a href="@Configuration.PrinterestUrl" class="d_block pinterest icon_wrap_size_2 circle color_grey_light_2">
                                <i class="icon-pinterest fs_small"></i>
                            </a>
                        </li>
                        <li class="m_bottom_15 m_right_15 m_md_right_15 tooltip_container">
                            <!--tooltip-->
                            <span class="d_block r_corners color_default tooltip fs_small tr_all">Dribbble</span>
                            <a href="@Configuration.YouTubeUrl" class="d_block youtube icon_wrap_size_2 circle color_grey_light_2">
                                <i class="icon-dribbble fs_small"></i>
                            </a>
                        </li>
                        <li class="m_right_15 m_bottom_15 tooltip_container">
                            <!--tooltip-->
                            <span class="d_block r_corners color_default tooltip fs_small tr_all">Instagram</span>
                            <a href="@Configuration.InstagramUrl" class="d_block instagram icon_wrap_size_2 circle color_grey_light_2">
                                <i class="icon-instagramm fs_small"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

@section scripts{
    <script src="~/plugins/jquery.plugin.min.js"></script>
    <script src="~/plugins/jquery.countdown.min.js"></script>
}