@using Identity.Base.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<header class="header-style-two">
    <div class="header-wrapper">
        <div class="header-top-area bg-gradient-color d-none d-lg-block">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 header-top-left-part">
                        <span class="address"><i class="webexflaticon flaticon-placeholder-1"></i> The Vineyards Office Estate, Manor House, 99 Jip De Jager, Bellville</span>
                        <span class="phone"><i class="webexflaticon flaticon-send"></i> info@olympiahd.com</span>
                    </div>
                    <div class="col-lg-4 header-top-right-part text-right">
                        <ul class="social-links">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li><a asp-area="" asp-page="">Welcome, @User.Identity.Name</a></li>
                            }
                            else
                            {
                                <li><a asp-area="Identity" asp-page="/Account/Login">Log In</a></li>
                                <li><a asp-area="Identity" asp-page="/Account/Register">Sign Up</a></li>
                            }
                            
                        </ul>
                        <div class="language">
                            <a class="language-btn" href="#"><i class="webexflaticon flaticon-internet"></i> English</a>
                            <ul class="language-dropdown">
                                <li><a href="#">English</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="bt_blank_nav"></div>

        @Html.Partial("Menus/Default")

    </div>
</header>