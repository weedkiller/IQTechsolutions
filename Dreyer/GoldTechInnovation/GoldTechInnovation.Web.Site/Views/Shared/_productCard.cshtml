@model Product

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageUrl" alt="Image Product Shop" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3><a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></h3>
            <p>Description</p>
        </div>
        <div class="addToCart">
            <p class="Button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.Id">Add to Cart</a>
            </p>
        </div>
    </div>
</div>