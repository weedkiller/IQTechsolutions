@model ShoppingCartViewModel

<h2>ShoppingCart: All Products</h2>

@*Creates a table*@
<table class="table table-bordered table-striped">
    @*Adds the table head*@
    <thead>
        <tr>
            <th>Selected Amount</th>
            <th>Product</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>

    @*Body of the tabel*@
    <tbody>
        @*That will be created inside a loop*@
        @*Will loop through all the items inside the shopping cart*@
        @*We want to loop through the items and not the shopping Cart itself*@
        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-center">@item.Amount</td>
                <td class="text-left">@item.Product.Name</td>
                <td class="text-right">@item.Product.Price.ToString("c")</td>
                <td class="text-right">
                    @((item.Amount * item.Product.Price).ToString("c"))
                </td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total</td>
            <td class="text-right">@Model.ShoppingCartTotal.ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Checkout</a>
</div>